datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(GUEST)
}

model Form {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  gejala    Gejala   @relation(fields: [gejala_id], references: [id])
  gejala_id Int
}

model Gejala {
  id             Int         @id @default(autoincrement())
  nama           String?
  jenis_gejala   jenisgejala @relation(fields: [jenisGejala_id], references: [id])
  jenisGejala_id Int
  Hasil_Diagnosa Hasil[]
  Form           Form[]
}

model jenisgejala {
  id     Int      @id @default(autoincrement())
  nama   String?
  gejala Gejala[]
}

model Diagnosa {
  id        Int      @id @default(autoincrement())
  nama      String?
  createdAt DateTime @default(now())
  Hasil     Hasil[]
}

model Tingkatdepresi {
  id             Int     @id @default(autoincrement())
  nama           String?
  foto           String?
  saran          String?
  Hasil_diagnosa Hasil[]
}

model Hasil {
  id          Int            @id @default(autoincrement())
  diagnosa    Diagnosa       @relation(fields: [diagnosa_id], references: [id])
  diagnosa_id Int
  nama_gejala Gejala         @relation(fields: [gejala_id], references: [id])
  gejala_id   Int
  tingkat     Tingkatdepresi @relation(fields: [tingkat_id], references: [id])
  tingkat_id  Int
  createdAt   DateTime       @default(now())
}

enum Role {
  GUEST
  ADMIN
}
